<%= form_with(model: @post, local: true) do |form| %>
  
  <div class="form-group form-wrapper form_confirm">
    <h1>New Post</h1>
    <div>
      <%= form.label :title, class:" col-form-label" %>
      <%= form.text_field :title, class:"form-control" %>
      <span style="color:red;"> <% @post.errors.full_messages_for(:title).each do |message|  %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.label :description, class:" col-form-label" %>
      <%= form.text_area :description, class:"form-control" %>
      <span style="color:red;"> <% @post.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
    
      <%= form.submit "Done", class:"btn button1 mv-20 form_confirm " %>
      <%= link_to 'Back', posts_path, class:"btn button1 button2 mv-20" %>
    </div>
  </div>
<% end %>
<script>

    $(window).on('popstate', function(event) {
       history.go(0);
});  
</script>


