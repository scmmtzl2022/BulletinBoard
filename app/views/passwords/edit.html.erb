<div class= "not-card not-card2">
<%= form_with model: @user do |form| %>
    <div class="form-group form-wrapper">
    <h1>Edit Password</h1>
        <div>
        <%= form.label :old_password, class:" col-form-label" %>
        <%= form.password_field :old_password, class:"form-control" %>
        </div>

        <div>
        <%= form.label :password, class:"col-form-label" %>
        <%= form.password_field :password, class:"form-control" %>
        </div>

        <div>
        <%= form.label :confirm_password, class:"col-form-label" %>
        <%= form.password_field :password_confirmation, class:"form-control" %>
        </div>

        <div>
            <%= form.submit "Done", class: "btn button1 mv-20" %>
            <%= link_to "Back", 'javascript:history.go(-1);', class: "btn button1 button2 mv-20" %>
        </div>
  </div>
<% end %>
</div>